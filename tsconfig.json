{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2016",
    "types": ["node", "reflect-metadata"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "dom"]
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
